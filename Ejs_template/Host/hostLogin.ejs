<% layout("../layouts/boilerPlate") %>
<body class="d-flex flex-column min-vh-100 m-0">
    <!-- Main Content -->
<main class="flex-grow-1 d-flex flex-column justify-content-center mt-0">
    <div class="row align-items-center justify-content-center">
            <!-- Logo -->
            <!-- <div class="col-12 text-center">
                <img id="logo" src="/stayEase.webp" alt="Logo" class="rounded-circle img-fluid" style="max-width: 200px;" />
            </div> -->

            <!-- Login Form -->
            <div class="col-md-5">
                <h1 class="mt-0 mb-3 text-gradient heading_login_text">Host Login</h1>
                <form class="needs-validation" novalidate method="post" action="/api/userLogin/hostLogin">
                    <!-- Email Input -->
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Username</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" name="username" aria-describedby="emailHelp" required>
                        <div class="invalid-feedback">Incorrect email</div>
                    </div>

                    <!-- Password Input with Show/Hide Password -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <a href="#" id="togglePassword" class="text-primary" style="cursor: pointer; text-decoration: none;">Show</a>
                        </div>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="password" required>
                        <div class="invalid-feedback">Incorrect password</div>
                    </div>

                    <!-- Save Password and Forgot Password -->
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Save password</label>
                        </div>
                        <a href="/forgot-password" class="text-primary">Forgot password?</a>
                    </div>

                    <!-- Login Button -->
                    <button type="submit" class="btn btn-primary w-100">Login</button>

                    <!-- Sign Up Link -->
                    <div class="text-center mt-3">
                        <span>Not a user?</span>
                        <a href="/api/register/hostSignUp" class="text-primary">Sign Up</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </main>

    <!-- JavaScript for Show Password -->
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const passwordField = document.querySelector('#exampleInputPassword1');

        togglePassword.addEventListener('click', function (e) {
            e.preventDefault(); // Prevent the anchor link from navigating
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            this.textContent = type === 'password' ? 'Show' : 'Hide';
        });
    </script>
</body>
