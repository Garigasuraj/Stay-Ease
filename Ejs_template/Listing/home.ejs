<% layout("../layouts/boilerPlate") %>
<body class="d-flex flex-column min-vh-60" style="background-color: #f8f9fa;">
    <main class="flex-grow-1 d-flex flex-column justify-content-center mt-4">
        <div class="container-fluid px-5">
            <div class="row g-4 p-0 m-0">
                <% listing_data.map(ele => { %>
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card modern-card border-0 shadow-sm">
                            <a href="/api/specific_item/<%= ele._id %>" class="text-decoration-none text-dark">
                                <!-- Image Section -->
                                <div class="card-img-container">
                                    <img src="<%= ele.image.url %>" class="card-img-top" alt="Listing Image">
                                </div>

                                <!-- Card Body -->
                                <div class="card-body">
                                    <h5 class="card-title fw-bold"><%= ele.title %></h5>
                                    <p class="text-muted mb-2"><%= ele.location %>, <%= ele.country %></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-primary fw-bold">$<%= ele.price.toLocaleString('en-US') %></span>
                                        <span class="badge bg-success p-2 rounded-pill">Available</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>
</body>
